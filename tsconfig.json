{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force"
  },
  "include": [
    "web-platform/src/**/*",
    "web-platform/next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "web-platform/node_modules",
    "mobile-app",
    "shared",
    "tests",
    "docs",
    "deployment"
  ]
}
