{
  "version": 2,
  "buildCommand": "npm install && cd web-platform && npm install && npm run build",
  "outputDirectory": "web-platform/.next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "public": true,
  "functions": {
    "web-platform/src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
